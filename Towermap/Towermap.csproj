<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../Riateu/MoonWorks/MoonWorks.csproj"/>
    <ProjectReference Include="../../Riateu/Riateu/Riateu.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="TeuJson" Version="3.2.0" />
    <PackageReference Include="TeuJson.Generator" Version="3.2.0" />
    <PackageReference Include="DotNetZip" Version="1.16.0" />
  </ItemGroup>

 <ItemGroup>
    <Content Include="..\runtimes\lib64\**\*.*">
      <Link>runtimes/linux-x64/native/%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Content/**/*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
